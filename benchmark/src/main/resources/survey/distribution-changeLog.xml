<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	
	<changeSet author="Guillaume Mary" id="distribution_tables">
		
		<createTable tableName="DistributionConfiguration">
			<column name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="messageTemplate_id" type="BIGINT"/>
		</createTable>
		
		<createTable tableName="Distribution">
			<column name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="sendTime" type="datetime(6)"/>
			<column name="configuration_id" type="BIGINT"/>
			<column name="message_id" type="BIGINT"/>
			<column name="personas_id" type="BIGINT"/>
		</createTable>
		
		<createTable tableName="Persona">
			<column name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
		</createTable>
		
		<createTable tableName="Message">
			<column name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="content" type="VARCHAR(255)"/>
		</createTable>
		
		<createTable tableName="ContactMean">
			<column name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="persona_id" type="BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="DTYPE" type="VARCHAR(31)">
				<constraints nullable="false"/>
			</column>
			<column name="phoneNumber" type="VARCHAR(255)"/>
			<column name="email" type="VARCHAR(255)"/>
		</createTable>
		
		<createTable tableName="DistributionConfiguration_ContactMean">
			<column name="DistributionConfiguration_id" type="BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="personas_id" type="BIGINT">
				<constraints nullable="false"/>
			</column>
		</createTable>
		
	</changeSet>
	
	<changeSet author="Guillaume Mary" id="distribution_constraints">
		<addPrimaryKey tableName="DistributionConfiguration_ContactMean"
					   columnNames="DistributionConfiguration_id, personas_id"/>
		<addForeignKeyConstraint baseTableName="DistributionConfiguration" baseColumnNames="messageTemplate_id"
								 referencedTableName="Message" referencedColumnNames="id"
								 constraintName="FK3dinoqtgbhiv0tx7fmtqwj7aw" />
		<addForeignKeyConstraint baseTableName="Distribution" baseColumnNames="message_id"
								 referencedTableName="Message" referencedColumnNames="id"
								 constraintName="FK3ir0g80egqsx0w4g8gdjodorr" />
		<addForeignKeyConstraint baseTableName="ContactMean" baseColumnNames="persona_id"
								 referencedTableName="Persona" referencedColumnNames="id"
								 constraintName="FK5r24hv6bjr2sjk29upfh0vw09" />
		<addForeignKeyConstraint baseTableName="DistributionConfiguration_ContactMean" baseColumnNames="DistributionConfiguration_id"
								 referencedTableName="DistributionConfiguration" referencedColumnNames="id"
								 constraintName="FK6oirw3dw1561f15kr1vs2m7xd" />
		<addForeignKeyConstraint baseTableName="Distribution" baseColumnNames="personas_id"
								 referencedTableName="ContactMean" referencedColumnNames="id"
								 constraintName="FK7th6op3ks1vt75bda36xj8pd6" />
		<addForeignKeyConstraint baseTableName="Distribution" baseColumnNames="configuration_id"
								 referencedTableName="DistributionConfiguration" referencedColumnNames="id"
								 constraintName="FKlo25lam49k7xwc32f6h5pw85y" />
		<addForeignKeyConstraint baseTableName="DistributionConfiguration_ContactMean" baseColumnNames="personas_id"
								 referencedTableName="ContactMean" referencedColumnNames="id"
								 constraintName="FKo47m1faxdqlc7qtyg6834yb3o" />
		<addUniqueConstraint tableName="DistributionConfiguration_ContactMean" columnNames="personas_id" constraintName="UK_77tdfhlc0il375875o4epwfrd"/>
		
	</changeSet>
	
</databaseChangeLog>
